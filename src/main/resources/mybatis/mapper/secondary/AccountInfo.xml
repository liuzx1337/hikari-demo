<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qishao.api.dao.secondary.AccountInfoDao">
    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.qishao.api.entity.AccountInfo">
        <id column="account_id" property="accountId" />
        <result column="system_id" property="systemId" />
        <result column="third_user_id" property="thirdUserId" />
        <result column="third_user_type" property="thirdUserType" />
        <result column="account_type" property="accountType" />
        <result column="account_status" property="accountStatus" />
        <result column="created_by" property="createdBy" />
        <result column="created_time" property="createdTime" />
        <result column="modified_by" property="modifiedBy" />
        <result column="modified_time" property="modifiedTime" />
        <result column="remark" property="remark" />
        <result column="is_activate" property="isActivate" />
        <result column="is_del" property="isDel"/>
    </resultMap>

    <select id="selectByThirdUserId" resultMap="BaseResultMap">
        select * from points_account_info
        where third_user_id = #{thirdUserId}
        and third_user_type = #{thirdUserType}
    </select>
</mapper>